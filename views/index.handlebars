<h1 class="text-center">Burgers!</h1>

<hr>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h2>Uneaten Burgers!</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{>burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-4">
            <h2>Add a Burger</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="burgerName">Burger Name:</label>
                    <input type="text" id="burgerName" name="name" placeholder="Add your Burger...">
                </div>

                <div class="form-group">
                    <label for="devoured">Devoured?</label><br>
                    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
                    <input type="radio" name="devoured" value="0"> Not Devoured!
                </div>

                <button type="submit">Add Burger</button>
            </form>
        </div>

        <div class="col-md-4">
            <h2>Burgers Eaten!</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{>burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>